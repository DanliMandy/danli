/* pages/cases/cases.wxss */
.container{
  min-height: 100%;
  background: #f5f5f5;
  color: rgb(51,51,51);
  position: relative;
}
.case-icon-f{
  font-size: 0;
  width: 100%;
  height: 338rpx;
  background: #f5f5f5;
}
.case-icon{
  width: 100%;
  height: 338rpx;
}
.acl{
  margin: 0 15rpx;
  background: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0 3px 3px rgb(232,232,232);
}
.acl-top{
  height: 100rpx;
}
.acl-title-img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 5rpx;
}
.acl-enter-img{
  width: 18rpx;
  height: 34rpx;
}
.acl-list{
  padding: 0 18rpx;
}
.acl-list-item{
  padding: 30rpx 0;
  border-bottom: 1px solid rgb(200,200,200);
  position: relative;
}
.hideZindex{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: #f8f8f8;
  opacity: 0;
  transition: all .4s;
}
.acl-list-item:hover,
.acl-list-item:active{
  opacity: 1
}
.acl-list-item:first-child{
  padding-top: 0;
}
.acl-list-img{
  width: 250rpx;
  height: 170rpx;
  margin-right: 20rpx;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
}
.acl-list-info{
  font-size: 12px;
  color: #999;
  line-height: 1;
}
.acl-list-title{
  color:#333;
  margin-bottom: 50rpx;
  line-height: 1.4;
  height: 76rpx;
  overflow-y: hidden; 
}
.acl-banner{
  padding: 23rpx 136rpx;
}
.banner-list{
  padding: 10rpx 20rpx;
}
.banner-btn-list{
  margin: 0 50rpx;
  font-size: 16px;
  color: rgb(102, 102, 102);
}
.banner-b{
  padding: 10rpx 30rpx;

}
.banner-btn{
  width: 18rpx;
  height: 34rpx;
}
.banner-btn-left{
  transform: rotate(180deg)
}

